<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.Comment">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="50dp"
        android:id="@+id/header"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12.5dp"
            android:src="@drawable/backicon"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="Comment"
            android:textSize="25dp"
            android:gravity="center| left"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/header"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/commentcontent"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/userimage"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_marginLeft="65dp"
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Ngô Thế Dũng"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/commentText"
                android:layout_marginLeft="65dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:text="Life is hard, but you need to be harder. Life is hard, but you need to be harder"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="65dp"
            >
            <LinearLayout
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="30dp">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/likeicon"
                    />
                <TextView
                    android:id="@+id/textlike"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Like"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/commenticon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Reply"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write a public comment"
            android:textSize="15dp"
            android:layout_marginLeft="65dp"
            />
    </LinearLayout>
</RelativeLayout>