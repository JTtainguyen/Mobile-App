<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        tools:context=".model.NewFeed">
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/primary_color"
            >
            <ImageView
                android:id="@+id/textlogo"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="30dp"
                android:src="@drawable/facebooktextlight"
                android:layout_marginRight="35dp"
                />

            <ImageView
                android:id="@+id/profile"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/menuicon"
                />
        </RelativeLayout>

        <FrameLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/post"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/userimage"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:id="@+id/newpost"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="50dp"
                        android:hint="What's on your mind?"
                        />
                    <ImageView
                        android:id="@+id/imagepost"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/photosicon"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/content0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:layout_below="@id/post">

                    <ImageView
                        android:id="@+id/userimage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/userimage" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:gravity="center"
                        android:text="Ngô Thế Dũng"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@id/username"
                        android:layout_marginLeft="80dp"
                        android:gravity="center"
                        android:text="10 mins ago"
                        android:textColor="@color/grey"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/postcontent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/userimage"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/postimage"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_below="@id/postcontent"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/postimage" />

                    <RelativeLayout
                        android:id="@+id/reaction"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@id/postimage"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/like"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="2dp"
                            android:text="🤣😥❤ 100" />

                        <TextView
                            android:id="@+id/comment"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignLeft="@id/like"
                            android:layout_marginLeft="200dp"
                            android:text="20 comments" />

                        <TextView
                            android:id="@+id/share"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:text="1 shares" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@id/reaction"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/likebutton"
                            android:layout_width="70dp"
                            android:layout_height="30dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/likeicon" />

                            <TextView
                                android:id="@+id/textlike"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:gravity="center"
                                android:text="Like"
                                android:textSize="16dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/writecomment"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="50dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/commenticon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="30dp"
                                android:gravity="center"
                                android:text="Comment"
                                android:textSize="16dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="50dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/shareicon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="30dp"
                                android:gravity="center"
                                android:text="Share"
                                android:textSize="16dp" />
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:layout_below="@id/content0"
                    android:layout_marginTop="1dp">

                    <ImageView
                        android:id="@+id/userimage1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/userimage" />

                    <TextView
                        android:id="@+id/username1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:gravity="center"
                        android:text="Ngô Thế Dũng"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/time1"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@id/username1"
                        android:layout_marginLeft="80dp"
                        android:gravity="center"
                        android:text="10 mins ago"
                        android:textColor="@color/grey"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/postcontent1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/userimage1"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/postimage1"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_below="@id/postcontent1"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/postimage" />

                    <RelativeLayout
                        android:id="@+id/reaction1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@id/postimage1"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/like1"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="2dp"
                            android:text="🤣😥❤ 100" />

                        <TextView
                            android:id="@+id/comment1"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignLeft="@id/like1"
                            android:layout_marginLeft="200dp"
                            android:text="20 comments" />

                        <TextView
                            android:id="@+id/share1"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:text="1 shares" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@id/reaction1"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/likebutton1"
                            android:layout_width="70dp"
                            android:layout_height="30dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/likeicon" />

                            <TextView
                                android:id="@+id/textlike1"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:gravity="center"
                                android:text="Like"
                                android:textSize="16dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/writecomment1"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="50dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/commenticon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="30dp"
                                android:gravity="center"
                                android:text="Comment"
                                android:textSize="16dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="50dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/shareicon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="30dp"
                                android:gravity="center"
                                android:text="Share"
                                android:textSize="16dp" />
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>
        </FrameLayout>

    </RelativeLayout>
</ScrollView>